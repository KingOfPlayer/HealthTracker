@using HealthTracker.Entities.Models.Device
@model List<Device>

<div>
    <div>
        <h2>
            New Device
        </h2>
    </div>

    <div class="d-flex justify-content-end">
        <div class="btn-group">
            <a asp-action="NewDevice" class="btn btn-success">New Device <i class="fa-solid fa-plus"></i></a>
        </div>
    </div>
    <table class="table table-striped my-3">
        <thead>
            <tr>
                <th scope="col">Device GUID</th>
                <th scope="col">Device Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Device device in Model)
            {
                <tr>
                    <td>@device.DeviceGuid</td>
                    <td>@device.DeviceName</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-danger" asp-action="RemoveDevice" asp-route-device-guid="@device.DeviceGuid"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p class="px-5">
        @Model.Count() Count Device Listed
    </p>
</div>